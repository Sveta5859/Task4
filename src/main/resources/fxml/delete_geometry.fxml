<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.myproject.ui.DeleteGeometryPanelController" spacing="10" style="-fx-padding:10;">
    <Label text="Delete Geometry"/>
    <Label text="Vertex:"/>
    <TextField fx:id="vertexIndexField" promptText="Vertex Index"/>
    <Button text="Delete Vertex" onAction="#onDeleteVertex"/>
    <Label text="Polygon:"/>
    <TextField fx:id="polygonIndexField" promptText="Polygon Index"/>
    <Button text="Delete Polygon" onAction="#onDeletePolygon"/>
</VBox>
